<div style="width:100%; height: 80vh;">
    <div class="d-flex align-items-center mx-3 my-5">
        <div class="ps-5">
            <h1 class="px-5 fs-1 text-light">A one-stop hub for trustworthy job openings and exciting internships.</h1>
            <h3 class="px-5 my-2 fs-4 fw-bold" style="color: #fed401;">Uncover Opportunities. Secure a Job.</h3>
            <a class="btn btn-light ms-5 fs-5 text-primary" href="/jobs" role="button">I'm A Job Seeker</a>
            <a class="btn btn-light ms-2 fs-5 text-primary" href="#" role="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop">I'm A Recruiter</a>
        </div>
        <img class="me-5" style="width: 400px; height:400px;" src="images/hero-img.jpg" alt="image">
        <% if (!locals.userEmail){ %>
            <!-- Register Modal start-->
        <div class="modal fade mt-5" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Experience easily!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/" method="post" class=" py-2 px-2 mx-auto"  style="background-color: white;">
                        <div class="mb-3 d-flex align-items-center">
                          <input type="text" class="form-control" name="name" placeholder="Name">
                        </div>
                        <div class="mb-3 d-flex align-items-center">
                          <input type="email" class="form-control" name="email" placeholder="Email">
                        </div>
                        <div class="mb-3 d-flex align-items-center">
                          <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-warning text-light px-4 py-1">Register</button>
                    </form>
                </div>
                <div class="modal-footer d-flex">
                    <p>Already registered?</p>
                    <a class="btn btn-info text-light py-1 px-3 ms-2 text-primary" href="#" role="button" data-bs-toggle="modal" data-bs-target="#login-model">Login</a>
                </div>
            </div>
            </div>
        </div>
        <!-- Register Modal end-->

        <!-- Login Modal start-->
        <div class="modal fade mt-2" id="login-model" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Experience easily!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/login" method="post" class=" py-2 px-2 mx-auto"  style="background-color: white;">
                        <div class="mb-3 d-flex align-items-center">
                          <input type="email" class="form-control" name="email" placeholder="Email">
                        </div>
                        <div class="mb-3 d-flex align-items-center">
                          <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-warning text-light px-4 py-1">Login</button>
                    </form>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-danger py-1 px-3" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
            </div>
        </div>
        <!-- Login Modal end-->
        <%}else{%>
            <!-- If user already logged In -->
            <div class="modal fade mt-2" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Experience easily!</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/logout" method="get" class=" py-2 px-2 mx-auto"  style="background-color: white;">
                            <button type="submit" class="btn btn-warning text-light px-4 py-1">Log out</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-danger py-1 px-3" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
                </div>
            </div>
        <%}%>

    </div>
    <div>
        
    </div>
</div>

