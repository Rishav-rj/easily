<% if(jobs.length < 1){ %>
  <div class="p-3 my-5 text-center">
    <div class="alert alert-warning" role="alert">
      <h2>No Jobs to show!</h2>
    </div>
</div>
<% } %>

<div class="d-flex flex-wrap justify-content-center p-3 my-5" style="background-color:#1ea8c4; min-height: 85vh;">
  <%jobs.forEach((job)=>{%>
    <div class="card m-3" style="width: 18rem; height:100%;">
        <div class="card-body">
          <div class="d-flex">
            <a href="#" class="btn btn-secondary px-3 py-1" style="cursor:default; opacity:0.7;">Actively hiring <i class="fa-solid fa-user"></i></a>
          </div>
          <h5 class="card-title my-2 text-primary"><%= job.companyName %></h5>
          <h6 class="card-subtitle my-2 text-body-secondary"><%= job.jobCategory %> <span class="text-danger"><%= job.designation %></span></h6>
          <div class="d-flex my-3">
            <i class="fa-solid fa-location-dot mt-1 me-1 text-success"></i>
            <p class="mb-0"><%=job.location%></p>
          </div>
          <p class="card-text"><i class="fa-solid fa-indian-rupee-sign"></i> <%=job.salary%></p>
          <div>
            <%job.skills.forEach((skill)=>{%>
              <a href="#" class="btn btn-outline-success my-1 py-0" style="cursor:default;"><%=skill%></a>
            <%})%>
          </div>
          <a href="/job/<%=job.id%>" class="btn btn-outline-primary fs-5 mx-auto d-block my-2 py-1">View details</a>
        </div>
    </div>
  <%})%>
    
</div>